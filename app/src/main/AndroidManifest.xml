<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.theshirequizgame">

    <application
        android:allowBackup="true"
        android:icon="@drawable/green_dragon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/green_dragon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.theshirequizgame.ReviewActivity"></activity>
        <activity android:name="com.example.theshirequizgame.ResultActivity" />
        <activity android:name="com.example.theshirequizgame.activities.Q_FiveActivity" />
        <activity android:name="com.example.theshirequizgame.activities.Q_FourActivity" />
        <activity android:name="com.example.theshirequizgame.activities.Q_ThreeActivity" />
        <activity android:name="com.example.theshirequizgame.activities.Q_TwoActivity" />
        <activity android:name="com.example.theshirequizgame.activities.Q_OneActivity" />
        <activity android:name="com.example.theshirequizgame.SelectActivity" />
        <activity android:name="com.example.theshirequizgame.HomeActivity" />
        <activity android:name="com.example.theshirequizgame.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.theshirequizgame.SignUpActivity"
            android:windowSoftInputMode="stateHidden|adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.theshirequizgame.LoginActivity"
            android:windowSoftInputMode="stateHidden|adjustResize" />
    </application>

</manifest>